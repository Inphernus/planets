<div class="row planet-view">
  <div class="planet-image"><img src="{{image}}" /></div>
  <div class="data">
    <div class="title"><h1>{{title}}</h1></div>
    <div class="description"><p>{{description}}</p></div>
    <div class="source"><p>Source :</p><a target="_blank" href="{{source}}">Wikipedia</a></div>
    <button class="{{name}}-active"><span id="span-num">01</span> Overview</button>
    <button><span id="span-num">02</span> Internal Structure</button>
    <button><span id="span-num">03</span> Surface Geology</button>
  </div>
</div>